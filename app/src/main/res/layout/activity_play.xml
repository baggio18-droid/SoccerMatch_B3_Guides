<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/playLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/playTitleCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp">
        <TextView
            android:id="@+id/playTitleTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soccer Match Score"
            android:background="#112031"
            android:textAlignment="center"
            android:textColor="#D4ECDD"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/homeAndAwayTeamLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/homeTeamCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:id="@+id/homeTeamLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeLabel"
                android:background="#2A0944"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/homeTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Home Team"
                    android:background="#FEC260"
                    android:textAlignment="center"
                    android:textColor="#3B185F"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/homeLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/teamlogo"
                    android:layout_marginVertical="20dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/homeScore"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="70dp"
                    android:textStyle="bold"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#FEC260"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp">
                    <ImageButton
                        android:id="@+id/addHomeScore"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_goal"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#2A0944"/>
                    <ImageButton
                        android:id="@+id/addHomeYellow"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_yellow_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#2A0944"/>
                    <ImageButton
                        android:id="@+id/addHomeRed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_red_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#2A0944"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VS"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="10pt"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/awayTeamCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="6dp">
            <LinearLayout
                android:id="@+id/awayTeamLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/homeLabel"
                android:background="#FEC260"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/awayTeam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3B185F"
                    android:text="Away Team"
                    android:textAlignment="center"
                    android:textColor="#FEC260"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/awayLogo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/teamlogo"
                    android:layout_marginVertical="20dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/awayScore"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:textSize="70dp"
                    android:textStyle="bold"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="#3B185F"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="10dp">
                    <ImageButton
                        android:id="@+id/addAwayScore"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_goal"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#FEC260"/>
                    <ImageButton
                        android:id="@+id/addAwayYellow"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_yellow_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#FEC260" />
                    <ImageButton
                        android:id="@+id/addAwayRed"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/icon_red_card"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#FEC260"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/timerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="6dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/yellow">
        <TextView
            android:id="@+id/timerShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:gravity="center"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">
        <Button
            android:id="@+id/matchStartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:enabled="true"
            android:backgroundTint="#0F52BA"/>
        <Space
            android:id="@+id/space1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/matchFinishBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:enabled="false"
            android:textColor="#ccc"
            android:backgroundTint="#BD1616"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">
    </FrameLayout>

</LinearLayout>